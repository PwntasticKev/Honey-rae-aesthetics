{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--stdio",
        "--browser=chromium",
        "--headless"
      ],
      "transport": "stdio",
      "timeoutMs": 120000
    },
    "context7": {
      "url": "https://context7.liam.sh/mcp"
    },
    "serena": {
      "command": "/ABSOLUTE/PATH/TO/uv",
      "args": [
        "run",
        "--directory",
        "/ABSOLUTE/PATH/TO/serena",
        "serena-mcp-server",
        "--project-file",
        "/ABSOLUTE/PATH/TO/YOUR/PROJECT.yml"
      ],
      "transport": "stdio"
    }
  }
}
